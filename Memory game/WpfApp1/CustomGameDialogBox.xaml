<Window x:Class="WpfApp1.CustomGameDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Game Dialog Box" Height="171" Width="368">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Number of Rows:" Margin="10"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="rowsTextBox" Margin="10"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Number of Columns:" Margin="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="columnsTextBox" Margin="10"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="70" Margin="10" Click="OnOkButtonClick"/>
            <Button Content="Cancel" Width="70" Margin="10" Click="OnCancelButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
