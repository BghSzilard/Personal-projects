<Page x:Class="WpfApp1.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisticsPage">
    <Grid>
        <StackPanel>
            <TextBlock Text="Games Played:"/>
            <TextBlock x:Name ="gamesPlayedTextBlock"/>
            <TextBlock Text="Games Won:"/>
            <TextBlock x:Name="gamesWonTextBlock"/>
            <TextBlock Text="Win Percentage:"/>
            <TextBlock x:Name ="winPercentageTextBlock"/>
            <Button Content="Back" Click="OnBackButtonClick"/>
        </StackPanel>
    </Grid>

</Page>
